<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Retrofit" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Przyciski -->
    <style name="main_buttons">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_background_default</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name ="tab_header">
        <item name="android:background">@drawable/textview_bg_silver</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">3sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name ="tab_row" parent="tab_header">
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@drawable/textview_bg_white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>